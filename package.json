{
  "name": "next-auto-logger",
  "version": "1.1.1",
  "description": "Universal Pino-based request logger for Next.js - auto-detects client/server, pretty logs in dev, CloudWatch in production",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "next-auto-logger": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.js",
      "require": "./dist/api.cjs"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/api.ts --format cjs,esm --dts --clean",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "keywords": [
    "nextjs",
    "logger",
    "pino",
    "logging",
    "observability",
    "cloudwatch",
    "structured-logging",
    "universal",
    "isomorphic",
    "fetch",
    "axios",
    "react-query",
    "cli",
    "setup"
  ],
  "author": "Benjamin Temple",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "next": ">=12.0.0",
    "pino": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "axios": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    },
    "swr": {
      "optional": true
    }
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "vitest": "^3.2.4",
    "next": "^14.0.0",
    "pino": "^9.9.0",
    "inquirer": "^9.0.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0"
  },
  "dependencies": {
    "pino-pretty": "^13.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
