{
  "name": "next-auto-logger",
  "version": "1.0.2",
  "description": "Instant, enterprise-grade logging for Next.js applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "keywords": [
    "nextjs",
    "logger",
    "pino",
    "logging",
    "observability"
  ],
  "author": "Benjamin Temple",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@types/node": "^24.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
